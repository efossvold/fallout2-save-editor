{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "description": "Fallout 2 save game editor",
  "scripts": {
    "build": "vite-react-ssg build",
    "deploy": "bunx netlify-cli deploy",
    "deploy:prod": "git hook run pre-commit && bunx netlify-cli deploy --prod",
    "dev": "vite-react-ssg dev",
    "fmt:check": "oxfmt --check",
    "fmt": "oxfmt",
    "lint:watch": "watchexec -w src -c -- bun run lint",
    "lint": "oxlint --type-aware --type-check --fix --report-unused-disable-directives -f stylish",
    "postinstall": "scripts/post-install.sh",
    "preview": "vite preview",
    "test:watch": "bun test --watch",
    "test": "bun test"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "clsx": "^2.1.1",
    "immer": "^11.1.4",
    "netlify-cli": "^24.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hot-toast": "^2.6.0",
    "reselect": "^5.1.1",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.2.0",
    "vite-react-ssg": "^0.9.1-beta.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.0",
    "@types/bun": "^1.3.9",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260220.1",
    "@vitejs/plugin-react": "^5.1.4",
    "babel-plugin-react-compiler": "19.0.0-beta-e552027-20250112",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.49.0",
    "oxlint-tsgolint": "^0.14.2",
    "vite": "8.0.0-beta.13",
    "watch-exec": "^1.2.2"
  }
}
